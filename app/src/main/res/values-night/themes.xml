<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PIsystem" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Teal and Coral Dark Theme Colors -->
        <item name="colorPrimary">@color/teal_light</item>
        <item name="colorPrimaryVariant">@color/teal_primary</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/coral_light</item>
        <item name="colorSecondaryVariant">@color/coral_accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/teal_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>

        <item name="colorSurface">@color/background_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/background_dark</item>
    </style>
</resources>